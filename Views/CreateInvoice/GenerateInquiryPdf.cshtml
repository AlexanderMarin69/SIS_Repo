        <table class="table">
            <tbody>
                <tr>

                    <td class="title">
                        <img src="https://www.sparksuite.com/images/logo.png" style="width:100%; max-width:300px;">
                    </td>

                    <td style="text-align: left;">
                        <h3><b>Faktura</b></h3><br>
                        Fakturanummer #@Model.Id<br>
                        Fakturadatum @Model.InvoiceDate<br>
                        Fakturadatum @Model.InvoicePayDate<br>
                        Vår referens: @Model.SenderName
                    </td>
                </tr>
                <tr>
                    <td>
                        Kundnummer @Model.ReceiverCustomerId<br>
                        Betalningsvillkor @Model.PaymentTerms<br>
                        Dröjsmålsränta @Model.InvoicecPastDuePercentageFee %<br>
                        Leveransdatum @Model.DeliveryDate<br>
                        Er referens: @Model.ReceiverReferenceName
                    </td>

                    <td style="text-align: left;">
                        Fakturaadress<br>
                        @Model.CustomerName<br>
                        @Model.CustomerInvoiceAddress<br>
                        @Model.CustomerZipCode @Model.CustomerCity<br>
                        @Model.CustomerCountry
                    </td>
                </tr>
            </tbody>
        </table>

        <p>@Model.InvoiceMessageText</p>

        <div class="container">
            <table class="table">
                <thead>
                    <tr style="text-align:left;">
                        <th scope="col">Artnr</th>
                        <th scope="col">Produkt/tjänst</th>
                        <th scope="col">Antal Enheter</th>
                        <th scope="col">A-pris</th>
                        <th scope="col">Summa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.InvoiceProducts)
                    {
                        <tr>
                            <th scope="row" style="text-align:left;">@p.ArticleNumber</th>
                            <td style="text-align:left;">@p.Name</td>
                            <td>@p.Quantity</td>
                            <td>@p.Price</td>
                            <td>@p.Quantity * @p.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
